<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ir.hamedandroid.volly_library_wia_developers.Activities.CustomRequestActivity">


    <Button
        android:id="@+id/btnSendCustomRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Sending Custom Request"
        android:textColor="#FFFFFFFF"/>

    <android.support.v7.widget.CardView
        android:id="@+id/crdHoldResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendCustomRequest"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="8dp"
            android:textColor="#585858"
            android:textSize="20sp"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>
