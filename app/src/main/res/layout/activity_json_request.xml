<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.hamedandroid.volly_library_wia_developers.Activities.JsonRequestActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnSendJsonObjectRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="Sending JSON Object Request"
            android:textColor="#FFFFFFFF" />

        <Button
            android:id="@+id/btnSendJsonArrayRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSendJsonObjectRequest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="Sending JSON Array  Request"
            android:textColor="#FFFFFFFF" />


        <Button
            android:id="@+id/btnSendJsonObjectRequest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSendJsonArrayRequest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="Sending JSON Object Request2"
            android:textColor="#FFFFFFFF" />

        <Button
            android:id="@+id/btnSendJsonArrayRequest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSendJsonObjectRequest2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="Sending JSON Array  Request2"
            android:textColor="#FFFFFFFF" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rclContacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnSendJsonArrayRequest2"
            android:layout_marginTop="16dp"
            android:divider="#FFFFFFFF"
            android:dividerHeight="8dp"
            android:padding="8dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSendJsonArrayRequest2">

            <TextView
                android:id="@+id/txtJsonResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>


        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
