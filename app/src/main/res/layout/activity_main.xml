<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ir.hamedandroid.volly_library_wia_developers.Activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp">


        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/img_header"
            android:tint="#FFFFFFFF" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/imgHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgStringRequest"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imgHeight"
                android:clickable="true"
                android:src="@drawable/selector_string_request" />


            <ImageView
                android:id="@+id/imgJsonRequest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imgHeight"
                android:layout_marginTop="@dimen/imgMarginTop"
                android:clickable="true"
                android:src="@drawable/selector_json_request" />

            <ImageView
                android:id="@+id/imgImageRequest"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imgHeight"
                android:layout_marginTop="@dimen/imgMarginTop"
                android:clickable="true"
                android:src="@drawable/selector_image_request" />

            <ImageView
                android:id="@+id/imgCustomRequest"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imgHeight"
                android:layout_marginTop="@dimen/imgMarginTop"
                android:src="@drawable/selector_custom_request" />


        </LinearLayout>


        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
