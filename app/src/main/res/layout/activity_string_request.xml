<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.hamedandroid.volly_library_wia_developers.Activities.StringRequestActivity">


    <Button
        android:id="@+id/btnSendStringRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Sending String Request"
        android:textColor="#FFFFFFFF" />


    <Button
        android:id="@+id/btnSendStringRequest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSendStringRequest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Sending String Request 2"
        android:textColor="#FFFFFFFF" />

    <android.support.v7.widget.CardView
        android:id="@+id/crdHoldResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendStringRequest2"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF"
            android:lineSpacingExtra="5dp"
            android:padding="8dp"
            android:text="Hello World"
            android:textColor="#585858"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>


</RelativeLayout>
